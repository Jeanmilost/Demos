#include <windows.h>
#include "resources.h"

501 MENU
BEGIN
    POPUP "Fichier"
    BEGIN
        MENUITEM "Ouvrir...",                      IDM_OPEN
        MENUITEM SEPARATOR
        MENUITEM "Quitter",                        IDM_APPEXIT
    END

    POPUP "Voir"
    BEGIN
        MENUITEM "Boîte de collision de l'objet",  IDM_SHOWBBOBJECT
        MENUITEM "Sphere de collision de l'objet", IDM_SHOWBSOBJECT
        MENUITEM "Sphere de collision du joueur",  IDM_SHOWBSPLAYER
        MENUITEM SEPARATOR
        MENUITEM "Diagnostiques",                  IDM_SHOWDIAGS
    END

    POPUP "Aide"
    BEGIN
        MENUITEM "Afficher",                       IDM_SHOWHELP
    END
END
